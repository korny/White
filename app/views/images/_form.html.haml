= form_for @image do |f|
  - if @image.errors.any?
    #error_explanation
      %h2= "#{pluralize(@image.errors.count, "error")} prohibited this image from being saved:"
      %ul
        - @image.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :caption
    = f.text_field :caption
  .field
    = f.label :height
    = f.number_field :height
  .field
    = f.label :width
    = f.number_field :width
  .field
    = f.label :gallery
    = f.text_field :gallery
  .actions
    = f.submit 'Save'
